extends ../../layout/default.pug
include ../../mixins/alert.pug
include ../../mixins/selectTree.pug


block main
  +alert-error(4000)
  h1(class="mb-4") Them moi danh muc san pham 
  form(
    action= prefixAdmin + "/products-category/create"
    method="POST"
    enctype="multipart/form-data"
    id="form-create-product"

  ) 
    //-name cua cac input lay tuong ung theo cac truong trong db(khi ng dung gui name len server thi luu luoon vao db nen name can giong trong db)
    div(class="form-group")
      label(for="title") Tieu de 
      input(
        type="text"
        name="title" 
        id="title" 
        class="form-control" 
        required
      ) 
    
    div(class="form-group")
      label(for="parent_id") Danh muc cha
      select(name="parent_id", id="parent_id" class="form-control")
        option(value="") --chon danh muc cha--
        if(records)
          +select-tree(records)
           
    div(class="form-group")
      label(for="desc") Mo ta
      textarea(
        rows="5"
        name="description" 
        id="content" 
        class="content" 
      )
    
    div(
      class="form-group"
      upload-image
    )
      label(for="thumbnail") Anh
      input(
        type="file"
        name="thumbnail" 
        id="thumbnail" 
        class="form-control-file" 
        accept="image/*"
        upload-image-input
      )
      img(src="" alt="image" upload-image-preview class="image-prev") 

    div(class="form-group")
      label(for="position") Vi tri
      input(
        type="number"
        name="position" 
        id="position" 
        class="form-control" 
        min="1"
        placeholder="tu dong tang"
      ) 
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        name="status" 
        id="statusActive" 
        class="form-check-input" 
        value="active"
        checked
      ) 
      label(for="statusActive" class="form-check-label") Hoat dong 
    
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        name="status" 
        id="statusInActive" 
        class="form-check-input" 
        value="inactive"
     
      ) 
      label(for="statusInActive" class="form-check-label") Dung hoat dong 
    
    div(class="form-group")
    button(
      type="submit"
      class="btn btn-primary"
    ) Tao moi
    

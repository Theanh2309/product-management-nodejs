extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
  h1(class="mb-4") Them moi nhom quyen
  +alert-success(3000)
  +alert-error(3000)
  form(
    action=`${prefixAdmin}/roles/edit/${records._id}?_method=PATCH`
    method="POST"
  ) 
    //-name cua cac input lay tuong ung theo cac truong trong db(khi ng dung gui name len server thi luu luoon vao db nen name can giong trong db)
    div(class="form-group")
      label(for="title") Tieu de 
      input(
        type="text"
        name="title" 
        id="title" 
        class="form-control" 
        required
        value=records.title
      )

    div(class="form-group")
      label(for="desc") Mo ta
      input(
        type= "text"
        name="description" 
        id="desc" 
        class="form-control"
        value=records.description 
      )

    div(class="form-group")
      button(
        type= "submit"
        class="btn btn-primary" 
      ) UPDATE
    

